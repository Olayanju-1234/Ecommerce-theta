// html.pug
html
  head
    style.
      body { font-family: Arial, sans-serif; background-color: #f7f7f7; color: #333; padding: 0; margin: 0; }
      .email-container { max-width: 600px; margin: 0 auto; padding: 20px; background-color: #fff; }
      .header { text-align: center; }
      .footer { text-align: center; font-size: 12px; color: #888; padding-top: 20px; }
  body
    .email-container
      .header
        img(src=assetsPath + "/logo.png", alt="Company Logo", width="150")
        h1 Welcome, #{firstname} with token of Welcome to Our Platform, #{verification_token}!!
        p Thank you for signing up for our platform. We're thrilled to have you with us.
      .body
        p Please click the link below to verify your email address and get started:
        a(href=verificationLink) Verify My Email
      .footer
        p If you did not sign up for this account, please ignore this email.
        img(src=assetsPath + "/footer.png", alt="Footer Image", width="200")
